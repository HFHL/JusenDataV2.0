/* pages/user/user.wxss */
.banner {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.usercard {
  padding-top: 10px;
  width: 94.87%;
  margin: 0 auto;
  border-radius: 12px;
  background-color: #F3F3F3;
  padding: 1px 1px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card {
  

}

.mott {
  padding-left: 12px;
  width: 95.67%;
  background-color: #fff;
  border-radius: 0 0 12px 12px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  letter-spacing: 4px;
}

.mott view {
  margin: 20px;
}

.webind {
  padding-left: 12px;
  width: 95.67%;
  background-color: #fff;
  margin-top: 10px;
  border-radius: 12px 12px 0px 0px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  /* height: 52px; */
}

.webind text {
  font-size: 18px;
  font-weight: bold;
}

.webind text text {
  color: red;
  font-size: 23px;
  font-weight: bold;
}

.webindlist {
  width: 100%;
  background-color: #fff;
  border-radius: 0px 0px 12px 12px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 52px;
}

.day {
  padding-top: 8px;
  padding-left: 12px;
  width: 95.67%;
  background-color: #fff;
  border-radius: 12px;
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.dayleft text:nth-child(1) {
  color: #8D8D8D;
}

.dayleft text:nth-child(2) {
  color: #000;
  font-size: 36px;
}

.dayleft text:nth-child(3) {
  color: red;
  font-size: 36px;
  font-weight: bold;
}

.task {
  padding-bottom: 8px;
  padding-top: 8px;
  padding-left: 12px;
  width: 95.67%;
  background-color: #fff;
  margin-top: 10px;
  border-radius: 12px;
}

.task a {
  font-size: 18px;
  font-weight: 900;
}

.taskcard {
  margin-top: 8px;
  margin-bottom: 8px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tasklist {
  margin-top: 8px;
  width: 90%;
  height: 29px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.listitem {
  display: flex;
  background-color: #E5E5E5;
  line-height: 29px;
  border-radius: 8px;
  margin: 3px 0;
}

.status {
  width: 15px;
  height: 15px;
  align-self: center;
  margin-left: 8px;
  border-radius: 100%;
}

.needtofinish {
  background-color: #FFDA1E;
}

.finished {
  background-color: #1EFF3C;
}

.timeout {
  background-color: #FF1E1E;
}

.chartbox {

  width: 100%;
  height: 150px;

}

.chart {
  width: 150px;
  height: 150px;
  margin: 0 auto;

}

.button_group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.sendtogroup {
  padding-bottom: 8px;
  padding-top: 8px;
  padding-left: 12px;
  width: 95.67%;
  background-color: #fff;
  margin-top: 10px;
  border-radius: 12px;
}

.togroupbutton {
  align-self: flex-end;
  margin-left: 27%;
  height: 40px;
  background-color: #1c8cfc;
  line-height: 40px;
  color: #FFF;
}

.togrouptext {
  margin-left: 8px;
  align-items: center;
  align-self: center;
}

.taskitem {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.button_group button {
  width: 95.67%;
  margin: 10px auto;
}

.welcome {
  padding-left: 12px;
  display: flex;
  flex-direction: row;
  width: 95.67%;
  border-radius: 12px 12px 0px 0px;
  align-items: center;

  background-color: #FFF;
}

.welcome image {
  width: 64px;
  height: 64px;
  border-radius: 100%;
}

.welcome text {
  margin: 0 5px;
  color: #1890FF;
}