<!--pages/login/login.wxml-->
<view class="container">
  <image src="../../images/jusen_logo.png" class="logo"></image>
  <view class="input-wrap">
    <van-field
    label="账号"
    value="{{ value }}"
    placeholder="请输入手机号或邮箱"
    border="{{ false }}"
    bind:change="onChange"
    class="input-field"
    required
  />

  </view>
  <view class="input-wrap">
    
    <van-field
    label="密码"
    value="{{ password }}"
    type="password"
    placeholder="请输入密码"
    required
    border="{{ false }}"
    class="input-field"
  />
  </view>
  <button class="login-btn" bindtap="handleLogin">登录</button>
  <text class="feedback">注册</text>
  <text class="feedback">我要反馈</text>
</view>